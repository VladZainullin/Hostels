@page
@model Hostels.WebApp.Pages.Guides.GovernmentsAgencies.List

<h1 class="display-5">Государственные органы</h1>

<table class="table">
    <tr>
        <td>Наименование</td>
        <td>Редактировать</td>
        <td>Удалить</td>
    </tr>
    @foreach (var entity in Model.Entities)
    {
        <tr>
            <td>@entity.Title</td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-id="@entity?.Id">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-id="@entity?.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Добавить</a>